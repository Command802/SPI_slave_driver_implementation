/dts-v1/;
/plugin/;

/{
    compatible = "ti,beaglebone", "ti,beaglebone-black";
    part-number = "PRU0_SPI_slave";
    version = "00A0";

    fragment@0 {
        target = <&am33xx_pinmux>;
        __overlay__ {
            pru0_spi_pins_s0: pru0_spi_pins_s0 {
                pinctrl-single,pins = <
                  0x190 0x05  /* pru0_spi_sclk, P9_31 */
                  0x19C 0x05  /* pru0_spi_cs,   P9_28 */
                  0x194 0x05  /* pru0_spi_mosi, P9_29 */
                  0x198 0x06  /* pru0_spi_miso, P9_30 */
                >;
            };
        };
    };

    fragment@1 {
        target = <&ocp>;
        __overlay__ {
            #address-cells = <1>;
            #size-cells = <1>;

            pru0_spi_slave: pru0_spi_slave@4a334000 {
                compatible = "ti,pru-spi-slave";
                #address-cells = <1>;
                #size-cells = <0>;
		reg = <0x4a334000 0x2000>,
		      <0x4a322000 0x0400>,
		      <0x4a322400 0x0100>;
		reg-names = "iram", "control", "debug";
                status = "okay";
                pinctrl-names = "default";
                pinctrl-0 = <&pru0_spi_pins_s0>;
                spislave0@0 {
                    reg = <0>;
                    compatible = "linux,spislave";
                };
            };
        };
    };
};
